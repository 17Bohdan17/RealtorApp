<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/SecondaryWindowStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RealtorApp.controller.RecordController">
    <children>
        <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: black; -fx-border-width: 5; -fx-border-radius: 28;" styleClass="mainPain">
            <children>
                <Pane fx:id="addRecordPane" prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: darkblue; -fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 5; -fx-border-radius: 28;" styleClass="text-field" stylesheets="@../css/SecondaryWindowStyle.css">
                    <children>
                        <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="14.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/main_icon.png" />
                            </image>
                        </ImageView>
                        <Label layoutX="47.0" layoutY="12.0" style="-fx-text-fill: white;" text="Додати об'єкт нерухомості" />
                        <ImageView fx:id="addRecordWindowCloseBtn" fitHeight="16.0" fitWidth="16.0" layoutX="570.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/close_icon.png" />
                            </image>
                        </ImageView>
                    </children>
                </Pane>
                <TextField fx:id="objectStreetTextField" alignment="CENTER" layoutX="52.0" layoutY="101.0" prefHeight="40.0" prefWidth="353.0" promptText="Вулиця об'єкту" styleClass="objectTextField">
                    <font>
                        <Font name="Trebuchet MS Bold" size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="objectNumberTextField" alignment="CENTER" layoutX="410.0" layoutY="101.0" prefHeight="40.0" prefWidth="123.0" promptText="Номер адреси" styleClass="objectTextField">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </TextField>
                <TextField fx:id="objectPriceTextField" alignment="CENTER" layoutX="312.0" layoutY="151.0" prefHeight="40.0" prefWidth="225.0" promptText="Ціна" styleClass="objectTextField">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </TextField>
                <Button fx:id="addObjectButton" layoutX="52.0" layoutY="311.0" mnemonicParsing="false" onAction="#clickAddObjectRecordButton" prefHeight="47.0" prefWidth="485.0" styleClass="objectButton" text="Додати об'єкт нерухомості">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Label fx:id="addRecordDoneLabel" alignment="CENTER" layoutX="552.0" layoutY="311.0" text="✅" textFill="#0af01d">
                    <font>
                        <Font name="System Bold Italic" size="23.0" />
                    </font>
                </Label>
            <TextField fx:id="objectAreaTextField" alignment="CENTER" layoutX="52.0" layoutY="151.0" prefHeight="40.0" prefWidth="251.0" promptText="Площа" styleClass="objectTextField">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </TextField>
            <TextField fx:id="objectRoomCountTextField" alignment="CENTER" layoutX="357.0" layoutY="201.0" prefHeight="40.0" prefWidth="181.0" promptText="Кількість кімнат" styleClass="objectTextField">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </TextField>
            <ChoiceBox fx:id="objectStatusChoiceBox" layoutX="155.0" layoutY="201.0" prefHeight="40.0" prefWidth="202.0" style="-fx-background-radius: 28; -fx-border-radius: 28; -fx-border-color: black; -fx-border-width: 3;" />
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="40.0" layoutX="52.0" layoutY="201.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="3.0" style="-fx-fill: white;" width="97.0" />
            <Label layoutX="62.0" layoutY="213.0" prefHeight="17.0" prefWidth="103.0" style="-fx-text-fill: gray;" text="Статус об'єкту" />
            </children>
        </Pane>
    </children>
</AnchorPane>
