<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/SecondaryWindowStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RealtorApp.controller.SecondaryWindowController">
    <children>
        <Pane prefHeight="474.0" prefWidth="822.0" style="-fx-border-color: black; -fx-border-width: 5; -fx-border-radius: 28;" styleClass="mainPain">
            <children>
                <Pane fx:id="addRecordPane" prefHeight="40.0" prefWidth="822.0" style="-fx-background-color: darkblue; -fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 5; -fx-border-radius: 28;">
                    <children>
                        <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="14.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/main_icon.png" />
                            </image>
                        </ImageView>
                        <Label layoutX="47.0" layoutY="12.0" style="-fx-text-fill: white;" text="Редагувати клієнта" />
                        <ImageView fx:id="addRecordWindowCloseBtn" fitHeight="16.0" fitWidth="16.0" layoutX="792.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/close_icon.png" />
                            </image>
                        </ImageView>
                    </children>
                </Pane>
                <TextField fx:id="clientFirstNameTextField" alignment="CENTER" layoutX="21.0" layoutY="63.0" prefHeight="40.0" prefWidth="240.0" promptText="Ім'я" style="-fx-border-color: black; -fx-border-radius: 28; -fx-border-width: 3; -fx-background-radius: 28;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="clientSecondNameTextField" alignment="CENTER" layoutX="21.0" layoutY="111.0" prefHeight="40.0" prefWidth="240.0" promptText="Прізвище" style="-fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3; -fx-border-radius: 28;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="clientNumberTextField" alignment="CENTER" layoutX="25.0" layoutY="160.0" prefHeight="40.0" prefWidth="240.0" promptText="Номер телефону" style="-fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3; -fx-border-radius: 28;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </TextField>
                <Button fx:id="saveClientButton" layoutX="21.0" layoutY="410.0" mnemonicParsing="false" onAction="#clickUpdateClientRecordButton" prefHeight="40.0" prefWidth="208.0" style="-fx-border-radius: 28; -fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3;" text="Зберегти зміни">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Label fx:id="addRecordDoneLabel" alignment="CENTER" layoutX="234.0" layoutY="413.0" text="✅" textFill="#0af01d">
                    <font>
                        <Font name="System Bold Italic" size="23.0" />
                    </font>
                </Label>
            <TextField fx:id="clientIdRequirementTextField" alignment="CENTER" layoutX="25.0" layoutY="211.0" prefHeight="40.0" prefWidth="240.0" promptText="ID вимоги" style="-fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3; -fx-border-radius: 28;">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </TextField>
            <Button fx:id="openClientTableButton" layoutX="21.0" layoutY="364.0" mnemonicParsing="false" onAction="#clickOpenClientTableForUpdate" prefHeight="40.0" prefWidth="208.0" style="-fx-border-radius: 28; -fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3;" text="Відобразити таблицю ">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label fx:id="warningLabel" layoutX="25.0" layoutY="258.0" prefHeight="40.0" prefWidth="240.0" style="-fx-background-color: white; -fx-background-radius: 28; -fx-alignment: center; -fx-border-color: black; -fx-border-width: 3; -fx-border-radius: 28;" text="Будь ласка, заповніть всі поля!" textAlignment="CENTER" textFill="#ff0707" />
            </children>
        </Pane>
      <TableView fx:id="updateTableView" editable="true" layoutX="269.0" layoutY="51.0" prefHeight="406.0" prefWidth="537.0" style="-fx-border-color: black; -fx-border-width: 3;" stylesheets="@../css/MainWindowStyle.css" />
    </children>
</AnchorPane>
