<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@CRUDOperationWindowStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Hibernate.addRecordPart.AddRecordController">
   <children>
      <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: darkblue; -fx-border-width: 5; -fx-border-radius: 28;" styleClass="mainPain">
         <children>
            <Pane fx:id="addRecordPane" prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: darkblue; -fx-background-radius: 28; -fx-border-color: blue; -fx-border-width: 5; -fx-border-radius: 28;">
               <children>
                  <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="14.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/house.png" />
                     </image>
                  </ImageView>
                  <Label layoutX="47.0" layoutY="12.0" style="-fx-text-fill: white;" text="Додати запис" />
                  <ImageView fx:id="addRecordWindowCloseBtn" fitHeight="16.0" fitWidth="16.0" layoutX="578.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/close.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
            <TextField fx:id="idAgreementObjectTextField" alignment="CENTER" layoutX="54.0" layoutY="63.0" prefHeight="40.0" prefWidth="485.0" promptText="ID об'єкта нерухомості">
               <font>
                  <Font name="Trebuchet MS" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="idAgreementClientTextField" alignment="CENTER" layoutX="54.0" layoutY="114.0" prefHeight="40.0" prefWidth="485.0" promptText="ID клієнта">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="idAgreementPriceTextField" alignment="CENTER" layoutX="54.0" layoutY="217.0" prefHeight="40.0" prefWidth="485.0" promptText="Ціна укладання угоди">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="idAgreementStatusTextField" alignment="CENTER" layoutX="54.0" layoutY="268.0" prefHeight="40.0" prefWidth="485.0" promptText="Статус угоди">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="addAgreementButton" layoutX="54.0" layoutY="344.0" mnemonicParsing="false" onAction="#clickAddAgreementRecordButton" prefHeight="33.0" prefWidth="485.0" text="Додати угоду">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <DatePicker fx:id="addAgreementRecordDatePicker" layoutX="55.0" layoutY="167.0" prefHeight="40.0" prefWidth="485.0" promptText="Дата укладання угоди" />
            <Label fx:id="addRecordDoneLabel" alignment="CENTER" layoutX="550.0" layoutY="344.0" text="✅" textFill="#0af01d">
               <font>
                  <Font name="System Bold Italic" size="23.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
