                    <font>
                        <Font name="System Bold Italic" size="23.0" />
                    </font>
                </Label>
            <TextField fx:id="clientIdRequirementTextField" alignment="CENTER" layoutX="355.0" layoutY="160.0" prefHeight="40.0" prefWidth="173.0" promptText="ID вимоги" style="-fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3; -fx-border-radius: 28;">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </TextField>
            </children>
        </Pane>
    </children>
