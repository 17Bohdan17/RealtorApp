                                <Image url="@../img/house.png" />
                            </image>
                        </ImageView>
                        <Label layoutX="47.0" layoutY="12.0" style="-fx-text-fill: white;" text="Додати клієнта" />
                        <ImageView fx:id="addRecordWindowCloseBtn" fitHeight="16.0" fitWidth="16.0" layoutX="570.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/close.png" />
                            </image>
                        </ImageView>
                    </children>
                </Pane>
                <TextField fx:id="clientFirstNameTextField" alignment="CENTER" layoutX="58.0" layoutY="63.0" prefHeight="40.0" prefWidth="475.0" promptText="Ім'я" style="-fx-border-color: black; -fx-border-radius: 28; -fx-border-width: 3; -fx-background-radius: 28;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="clientSecondNameTextField" alignment="CENTER" layoutX="60.0" layoutY="111.0" prefHeight="40.0" prefWidth="475.0" promptText="Прізвище" style="-fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3; -fx-border-radius: 28;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="clientNumberTextField" alignment="CENTER" layoutX="58.0" layoutY="160.0" prefHeight="40.0" prefWidth="297.0" promptText="Номер телефону" style="-fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3; -fx-border-radius: 28;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </TextField>
                <Button fx:id="addClientButton" layoutX="54.0" layoutY="302.0" mnemonicParsing="false" onAction="#clickAddClientRecordButton" prefHeight="40.0" prefWidth="485.0" style="-fx-border-radius: 28; -fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3;" text="Додати клієнта">
