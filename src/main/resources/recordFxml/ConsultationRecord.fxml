<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@CRUDOperationWindowStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.Hibernate.addRecordPart.AddRecordController">
    <children>
        <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: black; -fx-border-width: 5; -fx-border-radius: 28;" styleClass="mainPain">
            <children>
                <Pane fx:id="addRecordPane" prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: darkblue; -fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 5; -fx-border-radius: 28;">
                    <children>
                        <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="14.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/house.png" />
                            </image>
                        </ImageView>
                        <Label layoutX="47.0" layoutY="12.0" style="-fx-text-fill: white;" text="Додати консультацію" />
                        <ImageView fx:id="addRecordWindowCloseBtn" fitHeight="16.0" fitWidth="16.0" layoutX="570.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/close.png" />
                            </image>
                        </ImageView>
                    </children>
                </Pane>
                <TextField fx:id="consultationIdClientTextField" alignment="CENTER" layoutX="58.0" layoutY="63.0" prefHeight="40.0" prefWidth="475.0" promptText="ID клієнта" style="-fx-border-color: black; -fx-border-radius: 28; -fx-border-width: 3; -fx-background-radius: 28;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </TextField>
                <Button fx:id="addConsultationButton" layoutX="54.0" layoutY="302.0" mnemonicParsing="false" onAction="#clickAddConsultationRecordButton" prefHeight="40.0" prefWidth="485.0" style="-fx-border-radius: 28; -fx-background-radius: 28; -fx-border-color: black; -fx-border-width: 3;" text="Додати консультацію">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Label fx:id="addRecordDoneLabel" alignment="CENTER" layoutX="551.0" layoutY="305.0" text="✅" textFill="#0af01d">
                    <font>
                        <Font name="System Bold Italic" size="23.0" />
                    </font>
                </Label>
            <ChoiceBox fx:id="consultationStatusChoiceBox" layoutX="331.0" layoutY="119.0" prefHeight="40.0" prefWidth="202.0" style="-fx-background-radius: 28; -fx-border-radius: 28; -fx-border-color: black; -fx-border-width: 3;" />
            </children>
        </Pane>
      <DatePicker fx:id="consultationDatePicker" layoutX="61.0" layoutY="120.0" prefHeight="40.0" prefWidth="253.0" promptText="Дата назначення консультації" style="-fx-border-color: black; -fx-border-width: 3;" />
    </children>
